<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1B1B1B</item>
        <item name="colorPrimaryVariant">@color/cool_periwinkle</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BasicTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/cool_light_periwinkle</item>
    </style>

    <style name="SmallTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/cool_periwinkle</item>
    </style>

</resources>